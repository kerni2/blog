<h1>New Post</h1>

<%= form_with model: @blog_post do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% @blog_post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
    <% @blog_post.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= form.submit %>
<% end %>