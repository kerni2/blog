<div class="grid grid-cols-1 gap-6">
  <% @blog_posts.each do |blog_post| %>
  <div class="shadow-lg bg-white rounded-lg">
    <% if blog_post.draft? %>
      <p class="rounded text-right font-semibold bg-gray-100 text-gray-600">Draft</p>
    <% elsif blog_post.scheduled? %>
      <p class="rounded text-right font-semibold bg-blue-100 text-blue-600">Scheduled</p>
    <% end %>
    <h3 class="mt-4 text-1xl text-center font-bold tracking-tight text-gray-900 sm:text-3xl"><%= link_to blog_post.title, blog_post %></h3>
    <p class="mt-6 text-base leading-7 text-gray-600"><%= blog_post.content %></p>
  </div>
  <% end %>
</div>

<div class="m-10">
  <%== pagy_nav(@pagy) %>
</div>